# ===========================================
# Mapa Sonoro - Environment Variables
# ===========================================

# PostgreSQL Database
POSTGRES_USER=soundmap
POSTGRES_PASSWORD=soundmap_dev
POSTGRES_DB=soundmap
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Garage S3-Compatible Storage
GARAGE_RPC_SECRET=soundmap-rpc-secret-change-me-in-production
GARAGE_API_ENDPOINT=http://localhost:3900
GARAGE_ADMIN_ENDPOINT=http://localhost:3902

# S3 Client Configuration (for app usage)
S3_ACCESS_KEY=GK... # Generated after garage setup
S3_SECRET_KEY=... # Generated after garage setup
S3_ENDPOINT=http://localhost:3900
S3_REGION=garage
S3_FORCE_PATH_STYLE=true
S3_BUCKET_SOUNDS=sounds
S3_BUCKET_WAVEFORMS=waveforms

# Redis Queue
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Worker Configuration
WORKER_SECRET=your-worker-secret-share-with-nextauth-secret
# Use for Docker internal network (production)
INTERNAL_WEBHOOK_URL=http://web:3000

# ===========================================
# External Keycloak Configuration
# ===========================================
KEYCLOAK_ISSUER=https://your-keycloak-domain.com/realms/mapa-sonoro
KEYCLOAK_CLIENT_ID=web-app
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAP_STYLE_URL=https://tiles.your-domain.com/styles/basic/style.json
