{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@soundmap/database": [
                "../../packages/database/src/index.ts"
            ],
            "@soundmap/shared": [
                "../../packages/shared/src/index.ts"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "src/types/**/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}