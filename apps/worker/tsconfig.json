{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "incremental": false,
        "outDir": "./dist",
        // "rootDir": "./src",  <-- Removed to support importing from ../../packages
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@soundmap/database": [
                "../../packages/database/src/index.ts"
            ],
            "@soundmap/shared": [
                "../../packages/shared/src/index.ts"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}